{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["@types/jest"]
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "prisma/**/*/*.ts", "postcss.config.cjs", "src/app/api/auth/[...nextauth]/route.ts", "src/app/api/posts/route.ts", "__test__/src/app/api/posts/route.test.ts"],
  "exclude": ["node_modules"]
}
